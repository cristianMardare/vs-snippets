<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets
  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>it</Title>
      <Author>Cristian MARDARE</Author>
      <Description>Add a Mocha-based test</Description>
      <Shortcut>it</Shortcut>
    </Header>
    <Snippet>
      <Code Language="JavaScript">
        <![CDATA[it('$description$', () => {
        // arrange
        $arrange$
        
        // act
        $act$
        
        // assert
        $assert$
        })]]>
      </Code>
      <Declarations>
        <Literal>
          <ID>description</ID>
          <ToolTip>Add the description of the test</ToolTip>
        </Literal>
        <Literal>
          <ID>arrange</ID>
          <ToolTip>Add statements to setup the test</ToolTip>
        </Literal>
        <Literal>
          <ID>act</ID>
          <ToolTip>Add the execution of the test</ToolTip>
        </Literal>
        <Literal>
          <ID>assert</ID>
          <ToolTip>Add the assertions to validate the test</ToolTip>
        </Literal>
      </Declarations>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>